/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @background;
    text-color:             @selected;
	font:				 	"Museo Sans 15";
}

window {
    width:      			72%;
    padding:    			25px;
    border:					1px;
    border-radius:          12px;
    border-color:           @border;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@border;
}
